<%- include('../partials/header'); %>
<div class="space"></div>
<div class="container board-create-page">

  <h1>Create a new board</h1>
  <% if (errMsg) { %>
    <p class="error-message red align-center"><%= errMsg %></p>
  <% } %>
  
  <form method="POST" action="/<%= authUser %>/boards/create?redirect=<%= redirect %>">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="To try">
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <input type="text" class="form-control" id="description" name="description" placeholder="Gotta visit 'em all">
    </div>

    <div class="public-options">
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="public_setting" id="is_public" value=1>
        <label class="form-check-label" for="is_public">Public</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="public_setting" id="is_private" value=0>
        <label class="form-check-label" for="is_private">Private</label>
      </div>
    </div>
    <div class="buttons">
      <button class="btn btn-outline-secondary">Cancel</button>
      <button type="submit" class="btn btn-danger">Create</button>
    </div>
  </form>
</div>

<%- include('../partials/footer'); %>