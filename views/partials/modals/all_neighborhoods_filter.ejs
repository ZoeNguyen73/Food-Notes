<div class="modal fade" id="all-neighborhoods-filter-modal" tabindex="-1" role="dialog" aria-labelledby="mdalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalLabel">Select neigborhoods to filter</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        
        <form method="POST" action="/restaurants/">
          <div class="all-neighborhoods">
            <% neighborhoods.forEach(neighborhood => { %>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="1" name="<%=neighborhood.name %>" id="<%= neighborhood.name %>">
                <label class="form-check-label" for="<%=neighborhood.name %>">
                  <%= neighborhood.name %>
                </label>
              </div>
            <% }) %>
          </div>
          <div class="buttons">
            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-danger">Apply Filter</button>
          </div>          
        </form>
      </div>

    </div>
  </div>
</div>