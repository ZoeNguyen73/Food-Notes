<div class="modal fade" id="edit-tags-modal" tabindex="-1" role="dialog" aria-labelledby="mdalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalLabel">Edit tags for <span class="red"><%= restaurant.name %></span></h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% if (tags.length === 0) { %>
          <h5>Oops... you don't have any private tags</h5>
          <div class="small-spacing"></div>
          <div class="buttons">
            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
            <a href="/<%= authUser %>/tags/create?redirect=<%= redirect %>">
              <button type="button" class="btn btn-danger">Create a new tag</button>
            </a>
          </div> 
        <% } else { %>
          <form method="POST" action="/<%= authUser %>/tags/<%= restaurant.slug %>/update?_method=PUT&redirect=<%= redirect %>">
            <h5>Tick to add to/ Untick to remove from tag</h5>
            <div>
              <% tags.forEach(tag => { %>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" name="<%= tag.slug %>" value=1 id="<%= tag.slug %>" <%= tag.restaurants.includes(restaurant._id) ? 'checked' : '' %>>
                  <label class="form-check-label" for="<%= tag.slug %>">
                    <%= tag.name %>
                  </label>
                </div>
              <% }) %>
            </div>
            <div class="buttons">
              <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
              <a href="/<%= authUser %>/tags/create?redirect=<%= redirect %>">
                <button type="button" class="btn btn-outline-danger">Create a new tag</button>
              </a>
              <button type="submit" class="btn btn-danger">Apply Change</button>
            </div>          
          </form>
        <% } %>
        
        
      </div>

    </div>
  </div>
</div>